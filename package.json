        "file-loader": "2.0.0",
        "flux-standard-action": "^2.0.3",
        "fork-ts-checker-webpack-plugin-alt": "0.4.14",
        "fs-extra": "7.0.0",
        "globby": "6.x",
        "history": "^4.7.2",
        "html-webpack-plugin": "4.0.0-alpha.2",
        "identity-obj-proxy": "3.0.0",
        "immutability-helper": "^3.0.0",
        "jest": "23.6.0",
